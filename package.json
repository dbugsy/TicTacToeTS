{
  "scripts":{
    "test": "jest",
    "build": "npm run build-ts && npm run ts-lint",
    "ts-lint": "tslint -c tslint.json -p tsconfig.json"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "jest": "^21.2.1",
    "ts-jest": "^21.1.4",
    "tslint": "^5.8.0",
    "typescript": "^2.5.3"
  }
}
